extends layout

block content
	div(class="container")
		div(class="row")
			div(class="col-md-8")
				h1= title
		div(class="row move-down")
			div(class="col-md-8")
				a(href="/graph", class="btn btn-primary", role="button")
				span(class="glyphicon glyphicon-plus")
				.container
				form.form-signin(action='/siusti', method='post')
					h2.form-signin-heading Laiko nustatymas
					input.form-control(type='text', placeholder='Laikas neskaitomas islauzimu', autofocus='autofocus', name='laikas')
					button.btn.btn-lg.btn-primary.btn-block(type='submit',name='submit') Siusti  &nbsp
		div(class="row move-down justify-content-center")
			div(class="col-auto")
				table(class="table table-striped table-hover table-responsive")
					thead
						tr
							th ID
							th
							th DataIrLaikas

					tbody
						-each note in data
							include note_row
